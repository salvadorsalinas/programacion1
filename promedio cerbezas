#include"stdafx.h"
#include<iostream>
#include"conio.h"
using namespace std;

int main() {
	float i;
	float c;
	float n;
	float r;
	float s;
	cout << "numero de personas: ";
	cin >> n;
	s = 0;
    for(i=1;i<=n;i++){
		cout << "numero de cervezas por persona: " ;
	    cin >> c;
	    s = s+c;
	}
	
	r = s/n;
	cout << "el promedio de cervezas por persona es: " ;
	cout << r << endl;
	return 0;
}
